<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state (ON) - Light Pink -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_track_checked"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Unchecked state (OFF) - Light Blue/Purple -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_track_unchecked"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>