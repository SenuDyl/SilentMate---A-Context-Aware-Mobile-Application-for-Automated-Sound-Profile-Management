<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) -->
    <style name="Base.Theme.SilentMate" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#7B6FA0</item>
        <item name="colorPrimaryVariant">#5B5380</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#FFD54F</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#5B5380</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.SilentMate" parent="Base.Theme.SilentMate" />
</resources>