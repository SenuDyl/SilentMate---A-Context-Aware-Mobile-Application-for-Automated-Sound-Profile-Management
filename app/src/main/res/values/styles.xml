<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/date_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

<!--    <style name="AppFontStyle">-->
<!--        <item name="android:fontFamily">@font/noto_sans</item>-->
<!--    </style>-->

    <style name="DateToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">8dp</item>
        <item name="backgroundTint">@color/purple</item>
<!--        <item name="android:background">@drawable/toggle_button_selector</item>-->
    </style>

    <style name="Theme.SilentMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Force light mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="CustomTimePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <!-- Dialog background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Accent color (OK/Cancel buttons, toggles) -->
        <item name="colorAccent">@color/purple</item>

        <!-- Text color inside spinner/clock -->
        <item name="android:textColorPrimary">@color/gray</item>

        <!-- OK/Cancel button style -->
        <item name="android:buttonStyle">@style/TimePickerButtonStyle</item>
    </style>

    <style name="TimePickerButtonStyle" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>